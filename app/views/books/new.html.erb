<% if @booknew.errors.any? %>
  <%= @booknew.errors.count %>件のエラーが発生しました
  <% @booknew.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<h1>New book</h1>
<%= form_with model: @booknew, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit "Create Book" %>
<% end %>
<% comments.each do |comment| %>
  <% unless comment.id.nil? %>
    <tr>
      <td>
        <%= attachment_image_tag comment.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40"%> <br>
        <%= link_to comment.user.name, user_path(comment.user) %>
      </td>
      <td>
        <%= comment.comment %>
      </td>
      <td>
        <% if comment.user == current_user %>
          <%= link_to "Delete", book_comment_path(comment.book_id, comment.id), method: :delete, remote: true, class: 'btn-sm btn-danger' %>
        <% end %>
      </td>
    </tr>
  <% end %>
<% end %>
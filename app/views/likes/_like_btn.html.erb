<% if current_user.liked_by?(book.id) %>
  <%= link_to  book.likes.count, destroy_like_path(book), method: :delete, remote: true, class: "fas fa-heart heart_red" %>
<% else %>
  <%= link_to  book.likes.count, create_like_path(book), method: :post, remote: true, class: "fas fa-heart heart_blue" %>
<% end %>